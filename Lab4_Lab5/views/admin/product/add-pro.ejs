<%-include('../include/header')%>

<body>
<div class="row">
    <div class="col-md-2 ">
        <div class="logo"><h1 class="text-center"><span>CLOUD</span><span class="text-white">SHOP</span></h1></div>
        <hr>
        <p><i class="bi bi-pie-chart-fill me-2"></i><a  href=""> Quản lý thống kê</a></p>
        <p><i class="bi bi-tag-fill me-2"></i><a  href="/admin/categories"> Quản lý danh mục</a></p>
        <p><i class="bi bi-box-seam me-2"></i><a  href="/admin/products"> Quản lý sản phẩm</a></p>
        <p><i class="bi bi-people-fill me-2"></i><a  href=""> Quản lý người dùng</a></p>
        <hr>
        <div class="logout">
            <button>Đăng xuất</button>
        </div>
    </div>
    <div class="col-md-10">
        <div class="top">
            <img src="../img/img-admin.png" width="100px">
            <p>TRANG QUẢN TRỊ WEBSITE CLOUD SHOP</p>
            <div><span>Admin</span><img width="30px" height="30px" src="https://loremflickr.com/640/480" alt="" class="logoAd"></div>
        </div>
        <div class="content">
            <div class="lb-name ">
                <label>Thêm Sản Phẩm</label>
            </div>
            <div class="container shadow mb-3">
                <form class="product-form" action="" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="" class="form-label mt-3">Tên sản phẩm</label>
                        <input type="text" class="form-control" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Giá</label>
                        <input type="number" name="price" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Mô tả</label>
                        <input type="text" name="description" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Danh mục</label>
                        <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                            <% for(let cate of categories){ %>
                                <option value="<%= cate.id %>" name="category_id"><%= cate.name %></option>
                            <% } %>
                        </select>

                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Ảnh sản phẩm</label>
                        <input type="file" name="img" class="form-control">
                    </div>
                    <button type="submit"  class="btn btn-success mb-3">Thêm mới</button>

                </form>
            </div>


        </div>
    </div>
</div>
<!-- Footer -->
<%-include('../include/footer')%>
<script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
<!--<script type="module" src="../Admin/main.js"></script>-->
</body>
</html>
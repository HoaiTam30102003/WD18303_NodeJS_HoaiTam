<%-include('header')%>

<main>

    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://media.hcdn.vn/hsk/brand/1320x250brand-11709352100_img_1320x250_c0e985_fit_center.jpg"
                     class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://media.hcdn.vn/hsk/brand/1320x250brand-11709352100_img_1320x250_c0e985_fit_center.jpg"
                     class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://media.hcdn.vn/hsk/brand/1320x250brand-11709352100_img_1320x250_c0e985_fit_center.jpg"
                     class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container">
        <h2 class="title my-3">
            Sản phẩm nổi bật
        </h2>
        <div class="row">
            <% for (product of products){ %>

            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card mb-4" style="width: 18rem;">
                    <div class="box-img p-3">
                        <a href="shop/${e.id}">
                            <img src="images/<% product.imageURL %>"
                                 class="card-img-top" alt="...">
                        </a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><a href="shop/${e.id}"><%= product.title %></a></h5>
                        <p class="card-text"><%= product.description %></p>
                        <p class="card-text"><%= product.price %></p>
                        <a href="#" class="btn btn-primary">Thêm Vào Giỏ</a>
                    </div>
                </div>
            </div>

            <% } %>
        </div>
    </div>

</main>

<%-include('footer')%>